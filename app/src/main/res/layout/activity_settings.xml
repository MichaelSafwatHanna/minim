<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:descendantFocusability="beforeDescendants"
                  android:focusableInTouchMode="true">

        <EditText android:id="@+id/username_edit_text"
                  android:layout_width="256dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  android:background="@drawable/rounded_container"
                  android:hint="@string/username"
                  android:inputType="textShortMessage"
                  android:textColorHint="@android:color/tertiary_text_dark"
                  android:textColor="@android:color/white"/>

        <EditText android:id="@+id/email_edit_text"
                  android:layout_width="256dp"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="16dp"
                  android:background="@drawable/rounded_container"
                  android:hint="@string/email"
                  android:inputType="textEmailAddress"
                  android:textColorHint="@android:color/tertiary_text_dark"
                  android:textColor="@android:color/white"/>

        <Button android:id="@+id/update_button"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="@string/update"
                android:background="@drawable/rounded_container"
                android:textColor="@android:color/white"/>

        <Button android:id="@+id/help_button"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/help"
                android:background="@drawable/rounded_container"
                android:textColor="@android:color/white"/>

        <Button android:id="@+id/delete_button"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/delete_account"
                android:background="@drawable/rounded_container"
                android:textColor="@android:color/white"/>

        <Button android:id="@+id/sign_out_button"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:text="@string/sign_out"
                android:background="@drawable/rounded_container"
                android:textColor="@android:color/white"/>

    </LinearLayout>

</ScrollView>